Algoritmo "virificador"

Var
   idade: real
   habilitado: caractere 

Inicio
   escreval("qual a sua idade")
   leia(idade)

   escreval("você tem habilitacao? sim ou nao?")
   leia(habilitado)
   se (habilitado = "sim") e (idade >=18) entao
      escreval("vocÊ pode dirigir!!")
   senao
      escreval("voce nao pode dirigir")
   fimse

Fimalgoritmo
