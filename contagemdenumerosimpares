Algoritmo "contagemdenumerosimpares"

Var
   cont,v,tot,s: inteiro

Inicio
   para cont <- 1 ate 6  faca
      escreval("ëscreva um numero")
      leia(v)
      se (v <= 10) e (v>= 1) entao
         tot <- tot + 1
         se (v % 2 = 1 ) entao
            s <- s + v
         fimse
      fimse

   fimpara
   escreval("existem ", tot, " numeros enmtre 0 e 10")
   escreval("e a soma dos numeros impares é ", s)

Fimalgoritmo
