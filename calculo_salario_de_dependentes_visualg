Algoritmo "doa√ßao"

Var
   nome : caractere
   sal, nsal : real
   dep : inteiro


Inicio
   Escreval("qual o nome do funcionario")
   leia(nome)
   escreval("qual o salario do funcionario")
   leia(sal)
   escreval("quantos dependentes")
   leia(dep)
   escolha dep
   caso 0
   nsal <- sal + (sal * 5/100)
   caso 1, 2, 3
   nsal <- sal + (sal * 10/100)
   caso 4, 5, 6
   nsal <- sal + (sal * 18/ 100)
   fimescolha
   escreval("o funcionario com ", dep," de dependentes")
   escreval("recebe R$", nsal)
